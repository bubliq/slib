{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES2017",
        "lib": ["DOM", "ES6", "ES2017"],

        "outDir": "./dist/",
        "rootDir": "src",
        "types": ["@league-of-foundry-developers/foundry-vtt-types"],

        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,

        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,

        "skipLibCheck": true
    },
}
